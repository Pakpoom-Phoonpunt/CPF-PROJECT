<div>
    <p>My tasks list</p>
</div>



<table id="task view">
    <tr>
      <th>ลำดับ</th>
      <th>วันที่ (วันเดือนปี)</th>
      <th>กะทำงาน</th>
      <th>เวลาลงชื่อเข้า</th>
      <th>เวลาลงชื่อออก</th>
      <th>ทำงานล่วงเวลา (ชั่วโมง)</th>
      <th>สถานะ</th>
    </tr>
        <% @tasks.each_with_index do |task,index| %>
    <tr>
            <td><%= index+1 %></td>
            <td><%= task.day.strftime("%d-%m-%y") %></td>
            <td><%= task.shift %></td>
            
            <td><%= task.get_time(task.startTime)%></td>
            <td><%= task.get_time(task.endTime) %></td>
            <td><%= task.ot %></td>
            <% if task.active %>
                <td><%= link_to "ออกงาน", edit_tasks_manage_path(task) %></td>
            <% else %>
                <td><%= link_to "เข้างาน", edit_tasks_manage_path(task) %></td>
            <% end %>
    </tr>
    <% end %>   
   
</table>
