<!DOCTYPE html>
<html>
  <head>
    <title>CPFProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if flash[:notice]%>
    <div><%= flash[:notice] %></div>
  <%end%>
  <body>
  <% if @current_user%>
    <div><h1>Welcome <%=@current_user.name%></h1>
    <ul>
      <li><%= link_to "Dashboard" , "/accounts/#{current_user.id}/dashboard"%></li>
      <li><%= link_to "#{@current_user.name}" , account_path(@current_user)%> </li>
      <li><%= link_to 'Log Out', logout_path, :method => :post%></li>
    </ul>
    </div>
  <%end%>
    <%= yield %>
  </body>
</html>
